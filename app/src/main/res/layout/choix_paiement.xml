<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/x_blue100" >

        <ImageView
            android:id="@+id/retour"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/arrow_back"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/inscription"
            android:layout_toRightOf="@id/retour"
            android:textSize="30dp"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_below="@id/header" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quel est votre moyen de paiement ?"
            android:textSize="20dp"
            android:textColor="@color/x_blue100"
            android:layout_marginTop="150dp"
            />


        <Button
            android:id="@+id/prelevement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prélèvement bancaire"
            android:background="@drawable/button_blue_gradient"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/carte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carte bancaire"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_blue_gradient"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>