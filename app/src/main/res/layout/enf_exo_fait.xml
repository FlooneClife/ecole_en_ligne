<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".espaces.Parents.elementMenu.ExoEnfFait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:background="@color/x_blue100" >

            <ImageView
                android:id="@+id/retour"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/logout"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/espaceParent"
                android:layout_toRightOf="@id/retour"
                android:textSize="30dp"
                android:textColor="@color/white" />


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_margin="20dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".espaces.Parents.elementMenu.ExoEnfFait"
            tools:showIn="@layout/enf_exo_fait">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/enTantQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enTantQue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/loginName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/enTantQue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/enTantQue"
                    android:layout_marginTop="30dp"
                    android:text="Cours et Exercices effectuÃ©s :"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/texte_exo_fait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content"/>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>