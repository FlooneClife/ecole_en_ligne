<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/x_purple100" >

        <ImageView
            android:id="@+id/retour"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/arrow_back"
            android:clickable="true" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/retour"
            android:textSize="30dp"
            android:textColor="@color/white" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp"
            android:layout_below="@id/header" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:textSize="30dp"
            android:textColor="@color/x_purple150"
            android:text="@string/ur" />

        <Button
            android:id="@+id/eleve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eleve"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_purple_gradient"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_purple_gradient"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>